@model RPPP_WebApp.ViewModels.NaplatneKuciceMDViewModel

@{
    ViewBag.Title = "Ažuriranje naplatne kuæice (master-detail)";
}
<div class="container">

    <form asp-route-id="@Model.NaplatnaKucicaId"
          asp-route-page="@ViewBag.Page"
          asp-route-sort="@ViewBag.Sort"
          asp-route-ascending="@ViewBag.Ascending"
          asp-action="Edit"
          method="post">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label class="form-label">Otvorena</label>
            <select asp-for="Otvorena" class="dropdown">
                <option value="true">Da</option>
                <option value="false">Ne</option>
            </select>
            <div class="form-text"><span asp-validation-for="Otvorena" class="text-danger"></span></div>
        </div>

        <div class="form-group">
            <label class="form-label">Naplatna postaja</label>
            <select class="form-control" asp-for="NaplatnaPostajaId" asp-items="ViewBag.NaplatnaPostaja">
                <option disabled selected value="">Odaberite naplatnu postaju</option>
            </select>
            <div class="form-text"><span asp-validation-for="NaplatnaPostajaId" class="text-danger"></span></div>
        </div>

        <div class="form-group">
            <label class="form-label">Vrsta naplate</label>
            <select class="form-control" asp-for="VrstaNaplateId" asp-items="ViewBag.VrstaNaplate">
                <option disabled selected value="">Odaberite vrstu naplate</option>
            </select>
            <div class="form-text"><span asp-validation-for="VrstaNaplateId" class="text-danger"></span></div>
        </div>
        <div>
            <partial name="ProlasciVozila" model="Model.prolasciVozila" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Ažuriraj</button>
            <a asp-action="Index"
               asp-route-page="@ViewBag.Page"
               asp-route-sort="@ViewBag.Sort"
               asp-route-ascending="@ViewBag.Ascending"
               class="btn btn-secondary">Odustani</a>
        </div>
    </form>
</div>

<partial name="ProlazakVozilaTemplate" />

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/ivanMD.js" asp-append-version="true"></script>
}